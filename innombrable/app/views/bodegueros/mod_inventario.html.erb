<h1>Ver/modificar inventario</h1>

<%= button_to "Guardar materiales modificados", { action: 'guardar_materiales'}, class: "button" %>

<table style="width:90%">
  <tr>
    <th class="center">Material</th>
    <th class="center">Cantidad</th>
    <th class="center">Tipo</th>
    <th class="center">Disponibilidad</th>
    <th class="center">Comentarios</th>
  </tr>
  <% @materiales.each do |s| %>
  <tr id="<%= s.id %>">
    <td class="center"><%= s.nombre %></td>
    <td class="center"><%= s.cantidad %></td>
    <td class="center"><%= s.tipo %></td>
    <% if s.disponible == true%>
    <td class="center" bgcolor="4D65E2">SÃ­</td>
    <% else %>
    <td class="center" bgcolor="FF5C60">No</td>
    <% end %>
    <td><%= s.comentario %></td>
  </tr>
  <% end %>
</table>

<script src="app/assets/foundation_m/js/vendor/jquery.js"></script>
